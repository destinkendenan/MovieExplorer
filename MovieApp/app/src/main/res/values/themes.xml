<resources>
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <!-- Use Android's built-in text attributes instead of custom ones -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="dividerColor">@color/divider_light</item>
    </style>
    
    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp"/>
    
    <!-- Custom RatingBar style with gold stars -->
    <style name="GoldenRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlNormal">@color/text_secondary_light</item>
    </style>
</resources>